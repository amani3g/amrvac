 &filelist
        base_filename = 'rotorsrmhd'
        autoconvert   = T
        saveprim      = T
 /

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        ditsave_log   = 10
        dtsave_dat    = 0.02d0
 /

 &stoplist
        time_max      = 0.4d0
 /

 &methodlist
        time_integrator = 'fourstep'
        flux_scheme     = 20*'tvdlf'
        limiter  = 20*'koren'
 /

 &boundlist
        typeboundary_min1  = 6*'periodic'
        typeboundary_min2  = 6*'periodic'
        typeboundary_max1  = 6*'periodic'
        typeboundary_max2  = 6*'periodic'
 /

 &meshlist
        refine_criterion = 3
        refine_max_level = 5
    	refine_threshold = 20*0.2d0
        w_refine_weight(1)=0.6d0
        w_refine_weight(4)=0.2d0
        w_refine_weight(5)=0.1d0
        w_refine_weight(6)=0.1d0
        domain_nx1    = 60
        domain_nx2    = 60
        block_nx1    = 10
        block_nx2    = 10
        xprobmin1     = 0.0d0
        xprobmax1     = 1.0d0
        xprobmin2     = 0.0d0
        xprobmax2     = 1.0d0
 /

 &paramlist
        slowsteps=1000
        courantpar    = 0.4d0
 /

 &srmhd_list
        typedivbfix   = 'janhunen'
        srmhd_eos   = .true.
        srmhd_energy= .true.

        srmhd_maxiterationNR=500
        srmhd_absaccNR=1.0d-11
        srmhd_tolerNr=1.0d-10
        srmhd_checkNR=.true.
        srmhd_maxdspeed=1.0d-4
        small_vec2=1.0d-9

        srmhd_gamma = 1.66666d0
 /

