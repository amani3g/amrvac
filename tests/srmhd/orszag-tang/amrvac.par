 &filelist
        base_filename = 'otsrmhd'
        autoconvert   = T
        saveprim      = T
 /

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        ditsave_log   = 10
        dtsave_dat    = 0.1
 /

 &stoplist
        time_max      = 12.5
 /

 &methodlist
        time_integrator = 'threestep'
        flux_scheme     = 20*'hll'
        limiter  = 20*'cada3'
 /

 &boundlist
        typeboundary_min1  = 6*'periodic'
        typeboundary_min2  = 6*'periodic'
        typeboundary_max1  = 6*'periodic'
        typeboundary_max2  = 6*'periodic'
 /

 &meshlist
        refine_criterion = 3
        refine_max_level = 4
    	refine_threshold = 20*0.4d0
        w_refine_weight(1)=0.5d0
        w_refine_weight(4)=0.5d0
        domain_nx1    = 40
        domain_nx2    = 40
        block_nx1    = 10
        block_nx2    = 10
        xprobmin1     = 0.0d0
        xprobmax1     = 1.0d0
        xprobmin2     = 0.0d0
        xprobmax2     = 1.0d0
 /

 &paramlist
        courantpar    = 0.8d0
 /

 &srmhd_list
        typedivbfix   = 'linde'
        srmhd_glm   = .false.
        srmhd_eos   = .true.
        srmhd_energy= .true.
        srmhd_maxiterationNR=200
        srmhd_absaccNR=1.0d-11
        srmhd_tolerNr=1.0d-10
        srmhd_checkNR=.true.
        srmhd_maxdspeed=1.0d-4
        small_vec2=1.0d-9

        srmhd_gamma = 1.33333d0
 /

 &usr_list
      vmax=0.99d0
      rho0=1.0d0
      p0=10.0d0
 /
