 &filelist
        autoconvert   = f
        saveprim      = T
        nwauxio       = 0
        base_filename = 'output/iprob_3_x0_5rj_v0_100eV_qe_qm'
        convert_type  = 'vtuBmpi'
 /

 &savelist
        dtsave_dat    = 1d10
        time_between_print = 10.0
 /

 &stoplist
        time_max = 100.0
 /

 &methodlist
        time_integrator = 'threestep'
        flux_scheme     = 20*'hll'
        limiter  = 20*'cada3'
 /

 &boundlist
        typeboundary_min1  = 8*'periodic'
        typeboundary_min2  = 8*'periodic'
        typeboundary_min3  = 8*'periodic'
        typeboundary_max1  = 8*'periodic'
        typeboundary_max2  = 8*'periodic'
        typeboundary_max3  = 8*'periodic'
 /

 &meshlist
        iprob = 3 !dipole case
        refine_criterion = 3
        refine_max_level = 1
        domain_nx1    = 256
        domain_nx2    = 256
        domain_nx3    = 256
        block_nx1 = 64
        block_nx2 = 64
        block_nx3 = 64
        xprobmin1     = -150.0d10
        xprobmax1     = 150.0d10
        xprobmin2     = -150.0d10
        xprobmax2     = 150.0d10
        xprobmin3     = -150.0d10
        xprobmax3     = 150.0d10
 /

 &paramlist
        dtpar = 1d10             ! One big time step for MHD
 /

 &mhd_list
        typedivbfix   = 'linde'
        mhd_particles = .true.
 /

 &particles_list
        physics_type_particles='Lorentz'
        num_particles= 10 !10
        dtsave_particles = 1.0d-2
        write_ensemble = f
        write_individual = t
        npayload=14
        particles_eta=0.0d-4
        const_dt_particles = 5d-4
 /

 &my_list
        x0 = 1.0d0, 0.0d0, 0.0d0
        v0 = 0.0d0, 1.0d0, 0.5d0
        charge = 10.0
 /
